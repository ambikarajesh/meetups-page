extends ../../layout/index
block content
    #speakerDetail.container
      .row
        .col-sm-8
          article.speakerslist
            .container
              .row
                .col-sm-8
                  h3.speakerslist-title=speaker.title
                  h5.speakerslist-name
                    | with 
                    a(href=`/speakers/${speaker.shortname}`) #{speaker.name}
                  p.speakerslist-info
                    a(href=`/speakers/${speaker.shortname}`)
                    img.speakerslist-img.img-responsive.pull-left(src=`/images/speakers/${speaker.shortname}.jpg`, alt=`Photo of ${speaker.shortname} Post`, width='300px', height='300px')
                  p
                    | #{speaker.summary}
                  p
                    | #{speaker.description}
        include ../../includes/sidebar
