extends ../layout/index
block content
    #speakerList.container
      .row
        .col-sm-8
            article.speakerslist
            .container
                .row
                each speaker in speakerSummaries
                    .col-sm-8
                        h3.speakerslist-title #{speaker.title}
                        h5.speakerslist-name
                        | with 
                        a(href=`/speakers/${speaker.shortname}`) #{speaker.name}
                        p.speakerslist-info
                        a(href=`/speakers/${speaker.shortname}`)
                            img.speakerslist-img.img-circle.pull-left(src=`/images/speakers/${speaker.shortname}.jpg`, alt=`Photo of ${speaker.shortname}`, width='200px', height='200px')
                        p
                            | #{speaker.summary}
        include ../includes/sidebar